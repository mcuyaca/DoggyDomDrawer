<script>
  document.addEventListener("DOMContentLoaded", function () {
    const element = document.getElementById("toTop");
    element?.addEventListener("click", (event) => {
      event.preventDefault();
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  });
</script>
